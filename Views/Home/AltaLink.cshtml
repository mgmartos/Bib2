@model Bib2.Models.Urls

<style>
    .control-label {
        text-align: left;
    }

    input[type=text] {
        read-only;
    }
</style>

@using (Html.BeginForm())
{

    @Html.AntiForgeryToken()

    <div class="form-horizontal" style="padding:10px; background-color: whitesmoke">
        <h4>Urls</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="control-label col-md-2" style="text-align:left;">Tipo</label>
            <div class="col-md-10">

                @Html.EditorFor(model => model.tipo, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                @Html.ValidationMessageFor(model => model.tipo, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @*@Html.LabelFor(model => model.codigo_padre, htmlAttributes: new { @class = "control-label col-md-2" })*@
            <label class="control-label col-md-2" style="text-align:left;">Código</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.codigo_padre, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                @Html.ValidationMessageFor(model => model.codigo_padre, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" style="text-align:left;">Link</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.direccion, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.direccion, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" style="text-align:left;">Descripción</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.descripcion, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.descripcion, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Guardar" class="btn btn-default" />
            </div>
        </div>
    </div>
}


